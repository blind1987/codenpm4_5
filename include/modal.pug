            label(for="nombre" class="form-label") Nombre
            input(type="text" class="form-control" id="edit_nombre" name="nombre" aria-describedby="nombreHelp")
            #nombreHelp.form-text.text-warning Ingresa el nuevo nombre...
          .mb-3
            label(for="modelo" class="form-label") Modelo
            input(type="text" class="form-control" id="edit_modelo" name="modelo" aria-describedby="modeloHelp")
            #modeloHelp.form-text.text-warning Ingresa el nuevo modelo...
          .mb-3
            label(for="marca" class="form-label") Marca
            input(type="text" class="form-control" id="edit_marca" name="marca" aria-describedby="marcaHelp")
            #marcaHelp.form-text.text-warning Ingresa la nueva marca...
          .mb-3
            label(for="descripcion" class="form-label") Descripci√≥n 
            input(type="text" class="form-control" id="edit_descripcion" name="descripcion" aria-describedby="descripcionHelp")
            #descripcionHelp.form-text.text-warning Ingresa la nueva descripcion...
          .mb-3
            label(for="fecha_lanzamiento" class="form-label") Fecha de lanzamiento
            input(type="date" class="form-control" id="edit_fecha_lanzamiento" name="fecha_lanzamiento" aria-describedby="fechaLanzamientoHelp")
